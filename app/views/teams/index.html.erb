
<h1 class="text-center m-3">Teams</h1>



<table class="table table-bordered border-dark">
     <thead class="table-dark">
     <tr>
       <th>Name</th>
       <th>Country</th>
       <th>Founded</th>
       <th>Description</th>
       <th colspan="3" class="text-center">Action</th>
     </tr>
    </thead>

    <tbody>
      <% @teams.each do |team| %>
      <tr>
      <td><%= team.name %></td>
      <td><%= team.country %></td>
      <td><%= team.founded %></td>
      <td><%= team.description %></td>

      <td><%= link_to 'Show' , team, class: "btn btn-outline-success"%></td>
      <td><%= link_to 'Edit' , edit_team_path(team), class: "btn btn-outline-info" %></td>
      <td><%= button_to 'Delete', team_path(team), class: "btn btn-outline-danger", method: :delete, onclick: "return confirm('Are you sure?');" %></td>
      </tr>
      <% end %>
    </tbody>
</table>

<p class= "text-center fs-3">
<%= link_to "New Team", new_team_path %>
</p>

