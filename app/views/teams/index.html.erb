<table>
     <thead>
     <tr>
       <th>Name</th>
       <th>Country</th>
       <th>Founded</th>
       <th>Description</th>
       <th colspan="3">Action</th>
     </tr>
    </thead>

    <tbody>
      <% @teams.each do |team| %>
      <tr>
      <td><%= team.name %></td>
      <td><%= team.country %></td>
      <td><%= team.founded %></td>
      <td><%= team.description %></td>

      <td><%= link_to 'Show' , team_path(team) %></td>
      <td><%= link_to 'Edit' , edit_team_path(team) %></td>
      <td><%= button_to 'Delete', team_path(team), method: :delete, onclick: "return confirm('Are you sure?');" %></td>
      </tr>
      <% end %>
    </tbody>
</table>
