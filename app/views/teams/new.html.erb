<h1 class="text-center mt-4">Create Team</h1>
<% if @team.errors.any? %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
  <h4 class="alert-heading">The following errors prevented the team from being saved</h4>
  <ul>
    <% @team.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
     <% end %>
  </ul>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
 </div>
<% end %>

<%= form_with(model: @team,local: true) do |f| %>
    <p>
    <%= f.label:name%>
    <%= f.text_field :name %>
    </p>
    <p>
    <%= f.label:country%>
    <%= f.text_field :country %>
    </p>
    <p>
    <%= f.label:founded%>
    <%= f.text_field :founded %>
    </p>
    <p>
    <%= f.label:description %>
    <%= f.text_area :description %>
    </p>

    <p>
    <%= f.submit %>
    </p>
<% end %>


